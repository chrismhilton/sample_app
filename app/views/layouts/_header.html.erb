<!-- a partial for the site header -->

<!-- header element containing logo and site navigation -->
<header>
  <!-- link to logo using helper method -->
  <%= link_to logo, root_path %>
  <nav class="round">
    <!-- unordered list (ul) containing list items (li) -->
    <ul>
      <!-- Rails helper "link_to" with link text and named route -->
      <li><%= link_to "Home", root_path %></li>
      <% if signed_in? %>
      <li><%= link_to "Users", users_path %></li>
      <li><%= link_to "Profile", current_user %></li>
      <li><%= link_to "Settings", edit_user_path(current_user) %></li>
      <% end %>
      <li><%= link_to "Help", help_path %></li>
      <!-- if-then branching structure inside Embedded Ruby to set link to display -->
      <!-- signout link passes a hash argument indicating that it should submit with an HTTP DELETE request -->
      <% if signed_in? %>
      <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
      <% else %>
      <li><%= link_to "Sign in", signin_path %></li>
      <% end %>
    </ul>
  </nav>
</header>